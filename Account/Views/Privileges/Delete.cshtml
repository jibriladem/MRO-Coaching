@model MROCoatching.DataObjects.Models.UserManagment.Identity.ApplicationPrivilege

@{
    ViewBag.Title = "Delete Privilege";
    Layout = "~/Views/Shared/_layout3.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Delete Privilege</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { area = "Account"})"><i class="fa fa-home"></i> Home</a></li>
                    <li class="breadcrumb-item "><a href="@Url.Action("Index", "Privileges", new { area = "Account"})"><i class="fa fa-unlock"></i> Privileges</a></li>
                    <li class="breadcrumb-item active"><i class="fa fa-trash"></i> Delete Privilege</li>
                </ol>
            </div>
        </div>
    </div>
</section>


<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">
                <a class="box-title" href="@Url.Action("Index", "Privileges", new { area = "Account"})"><i class="fa fa-user text-primary"></i>  Back to List</a>
            </h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">

            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h5><i class="icon fa fa-ban"></i> Alert!</h5>
                <h4>Are you sure you want to delete this?</h4>
                <p>Warning: roles with this privilege will lose it.</p>
            </div>

            <!-- Default box -->
            <div class="box box-primary">

                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Action)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Action)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                </dl>

                <div class="box-footer">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <div class="form-actions no-color">
                                <div class="col-4">
                                    <input type="submit" value="Delete" class="btn btn-block btn-flat btn-danger" /> | @Html.ActionLink("Back to List", "Index")
                                </div>
                            </div>
                        </div>
                    }
                </div><!-- /.box-footer -->

            </div><!-- /.box -->

        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>







