@model IEnumerable<MROCoatching.DataObjects.ViewModel.Identity.RoleViewModel>

@{
    ViewBag.Title = "Roles";
    ViewBag.Name = "Roles List.";
    ViewBag.TableId = "tblRoles";
    ViewBag.DefualtSortingColumnIndex = 1;
    Layout = "~/Views/Shared/_layout3.cshtml";
}
@*<environment include="Production">*@
    <link href="~/AdminLTE/plugins/datatables/dataTables.bootstrap4.css" rel="stylesheet" />    
    <link href="~/AdminLTE/plugins/sweetalert/sweetalert2.min.css" rel="stylesheet" />
@*</environment>*@

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Roles</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { area = "Account"})"><i class="fa fa-home"></i> Home</a></li>
                    <li class="breadcrumb-item active"> <i class="fa fa-unlock"></i>Roles</li>
                </ol>
            </div>
        </div>
    </div>
</section>


<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">
                <a class="box-title" href="@Url.Action("Create", "Roles", new { area = "Account"})"><i class="fa fa-user text-primary"></i>  Create New</a>
            </h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="box-body table-responsive no-padding">

                <table id="tblRoles" class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                No.
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RoleName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @{
                            int i = 1;
                            foreach (var item in Model)
                            {
                                <tr class="odd" role="row">
                                    <td>@(i++)</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RoleName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @*@Html.ActionLink("Edit", "Edit", new { name = item.RoleName }) |
                                            @Html.ActionLink("Delete", "Delete", new { name = item.RoleName })*@
                                        <span style="white-space : nowrap">
                                            <a href="@Url.Action("Edit", new { name = item.RoleName })" title="Edit"><i class="fa fa-edit text-success"></i></a> &nbsp;
                                            <a href="@Url.Action("Delete", new { name = item.RoleName })" title="Delete"><i class="fa fa-trash text-danger"></i></a>
                                        </span>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>

            </div><!-- /.box-body -->

        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>

@*<environment include="Production">*@
    <script src="~/AdminLTE/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/AdminLTE/plugins/datatables/dataTables.bootstrap4.js"></script>
    <script src="~/AdminLTE/plugins/sweetalert/sweetalert2.min.js"></script>

    <script type="text/javascript">
        $(function () {
            $('#tblRoles').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "iDisplayLength": 8
            });
        });

         $(document).ready(function () {

            @if (ViewBag.SuccessAlertMessage != null)
            {
                <text>
                    swal({
                        position: 'center',
                        type: 'success',
                        title: '@ViewBag.SuccessAlertMessage',//'Your work has been saved',
                        showConfirmButton: false,
                        timer: 3000
                    });
                </text>
                 ViewBag.SuccessAlertMessage = null;
            }

            @if (ViewBag.FailureAlertMessage != null)
            {
                <text>
                    swal({
                        position: 'center',
                        type: 'error',
                        title: '@ViewBag.FailureAlertMessage',//'Your work has been saved',
                        showConfirmButton: false,
                        timer: 3000
                    })
                </text>
                 ViewBag.FailureAlertMessage = null;
            }
    });
    </script>
@*</environment>*@
