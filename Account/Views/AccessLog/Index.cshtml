@model IEnumerable<MROCoatching.DataObjects.Models.Others.AccessLog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_layout3.cshtml";
}

@*<environment include="Production">*@
    <!-- select2 -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/select2/select2.css">
@*</environment>*@

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Access Log</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { area = "Account"})"><i class="fa fa-home"></i> Home</a></li>
                    <li class="breadcrumb-item active">Access Logs</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">
                User Access Logs
            </h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body table-responsive no-padding">

            <table id="tblAccessLog" class="table table-hover table-responsive">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ActionDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StatementTaken)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ActionDid)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FromWhichComputer)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserGroup)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FunctionalityType)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int index = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@(index++)</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ActionDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StatementTaken)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ActionDid)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FromWhichComputer)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserGroup)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FunctionalityType)
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>  
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>

@*<environment include="Production">*@
    <script src="~/AdminLTE/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/AdminLTE/plugins/datatables/dataTables.bootstrap4.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#tblAccessLog').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "iDisplayLength": 20
            });
        });
    $(document).ready(function () {

         @{
            if(ViewBag.AccountMessage != null)
            {
                <text>bootbox.alert('@ViewBag.AccountMessage');</text>
                ViewBag.AccountMessage = null;
            }
        }
    });
    </script>
@*</environment>*@


