                                        <span asp-validation-for="Plcode" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row">
                                        <label asp-for="Pltypes" class="form-control-label col-sm-4"></label>
                                        <input asp-for="Pltypes" class="form-control col-sm-8" readonly style="pointer-events:none;" />
                                        <span asp-validation-for="Pltypes" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row">
                                        <label asp-for="Taskcode" class="form-control-label col-sm-4"></label>
                                        <input asp-for="Taskcode" class="form-control col-sm-3" readonly style="pointer-events:none;" />
                                        @*<div class="col-sm-3">
                                    <select asp-for="Taskcode" class="form-control col-sm-12 select2" asp-items="@ViewBag.Taskcode">
                                        <option value="">----------</option>
