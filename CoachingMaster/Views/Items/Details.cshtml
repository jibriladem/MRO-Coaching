                                </div>*@
                                        <input id="Taskname" class="form-control col-sm-5" readonly style="pointer-events:none;" />
                                        <span asp-validation-for="Taskcode" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-12">
                                    <div class="form-group col-sm-12 row">
                                        <label asp-for="Description" class="form-control-label  col-sm-2"></label>
                                        <textarea asp-for="Description" class="form-control col-sm-20" readonly style="pointer-events:none;"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <br /><br />
                <div class="row cols-m-12">
                    <div class="col-sm-6">
