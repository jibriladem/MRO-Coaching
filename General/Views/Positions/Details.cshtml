@model MROCoatching.DataObjects.Models.General.Positions
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using MROCoatching.DataObjects.DropDown;
@{
    ViewData["Title"] = "Details";
    Layout = null;
}
<style>
    .select2-container {
        width: 100% !important;
    }

    .select2-search--dropdown .select2-search__field {
        width: 98%;
    }

    .select2-container--default .select2-selection--single {
        height: inherit;
    }

    fieldset {
        border: 1px solid #005580;
        padding: 3px;
    }

    legend {
        font-family: 'Wide Latin';
        font-size: small;
    }
</style>
<link rel="stylesheet" href="~/AdminLTE/plugins/timepicker/bootstrap-timepicker.css">
<link rel="stylesheet" href="~/AdminLTE/plugins/iCheck/square/blue.css">
<link href="~/AdminLTE/plugins/datepicker/datepicker3.css" rel="stylesheet" />

<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-body">

            <form id="positions" class="form-horizontal">

                @Html.AntiForgeryToken()
                <div class="callout callout-danger error-box-holder" id="general-error" style="display:none">
                    <h4> Please correct the following errors and sumbit again </h4>
                    <ul id="errors" class="error-box"></ul>
                </div>
                @Html.ValidationSummary(true)
                @if (ViewBag.Message != null)
                {
                    <p style="color: red">@ViewBag.Message</p>
                }
                <fieldset class="col-sm-12">
                    <div class="row col-sm-12">
                        <div class="col-sm-12" style="pointer-events:none;">
                            <div class="form-group col-sm-12 row">
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row">
                                        <label asp-for="Postid" class="form-control-label col-sm-4"></label>
                                        <input asp-for="Postid" class="form-control col-sm-4" readonly/>
                                        <span asp-validation-for="Postid" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row ">
                                        <label asp-for="Postname" class="form-group col-sm-4"></label>
                                        <input asp-for="Postname" class="form-control col-sm-8" readonly/>
                                        <span asp-validation-for="Postname" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row">
                                        <label asp-for="Fromdate" class="form-control-label col-sm-4"></label>
                                        <input asp-for="Fromdate" class="form-control col-sm-4 date-field" type="text" readonly />
                                        <span asp-validation-for="Fromdate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row">
                                        <label asp-for="Toodate" class="form-control-label col-sm-4"></label>
                                        <input asp-for="Toodate" class="form-control col-sm-4 date-field1" type="text" readonly style="pointer-events:none;" />
                                        <span asp-validation-for="Toodate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <br />
            </form>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>
<script src="~/AdminLTE/plugins/timepicker/bootstrap-timepicker.min.js"></script>
<script src="~/AdminLTE/plugins/iCheck/icheck.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/AdminLTE/plugins/datepicker/bootstrap-datepicker.js"></script>
<script>

    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        })
    });

    $(document).ready(function () {
        let dateObj = new Date();
        let dateObj1 = new Date();
        dateObj1 = '12/31/9999';
        $('.date-field').datepicker(
            {
                format: 'mm/dd/yyyy',
                autoclose: true
            }).datepicker("setDate", dateObj);
         $('.date-field1').datepicker(
            {
                format: 'mm/dd/yyyy',
                autoclose: true
            }).datepicker("setDate", dateObj1);

        $('.select2').select2();
        $(document).keypress(function (e) {
            if (e.which == 13) {
                $('#submit').click();//Trigger search button click event
            }
        });
    });

</script>