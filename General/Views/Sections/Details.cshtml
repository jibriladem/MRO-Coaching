                                        <span asp-validation-for="Deptname" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row ">
                                        <label asp-for="Divisiondept" class="form-group col-sm-4">Division</label>
                                        <input asp-for="Divisiondept" class="form-control col-sm-6" readonly style="pointer-events:none;" />
                                        <span asp-validation-for="Divisiondept" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row">
                                        <label asp-for="Fromdate" class="form-control-label col-sm-4"></label>
                                        <input asp-for="Fromdate" class="form-control col-sm-4 " type="date" readonly style="pointer-events:none;" />
                                        <input asp-for="Toodate" class="form-control col-sm-4 " type="date" readonly style="pointer-events:none;" />
                                        <span asp-validation-for="Fromdate" class="text-danger"></span>
                                        <span asp-validation-for="Toodate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row">
                                        <label asp-for="Subsec" class="form-control-label col-sm-4"></label>
                                        @*<input asp-for="Subsec" class="form-control col-sm-6" readonly style="pointer-events:none;" />*@
                                        <div class="col-sm-6">
                                            @Html.DropDownListFor(model => model.Subsec,
                                           new SelectList(StaticLists.GET_MGMT(), "Value", "Text", "Yes"), "-------", new { @class = "form-control select2 ", @disabled = "disabled" })
                                        </div>
                                        <span asp-validation-for="Subsec" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row ">
                                        <label asp-for="Reportsto" class="form-group col-sm-4"></label>
                                        <input asp-for="Reportsto" class="form-control col-sm-6 date-field1" type="text" readonly style="pointer-events:none;" />
                                        <span asp-validation-for="Reportsto" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <br />
                <br />
            </form>
        </div>
