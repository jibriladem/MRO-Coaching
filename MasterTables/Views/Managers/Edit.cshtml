@model MROCoatching.DataObjects.Models.MasterTables.Managers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using MROCoatching.DataObjects.DropDown;
@{
    ViewData["Title"] = "Create";
    Layout = null;
}
<style>
    .select2-container {
        width: 100% !important;
    }

    .select2-search--dropdown .select2-search__field {
        width: 98%;
    }

    .select2-container--default .select2-selection--single {
        height: inherit;
    }

    fieldset {
        border: 1px solid #005580;
        padding: 3px;
    }

    legend {
        font-family: 'Wide Latin';
        font-size: small;
    }
</style>
<link rel="stylesheet" href="~/AdminLTE/plugins/timepicker/bootstrap-timepicker.css">
<link rel="stylesheet" href="~/AdminLTE/plugins/iCheck/square/blue.css">
<link href="~/AdminLTE/plugins/datepicker/datepicker3.css" rel="stylesheet" />

<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-body">

            <form id="managers" class="form-horizontal">

                @Html.AntiForgeryToken()
                <div class="callout callout-danger error-box-holder" id="general-error" style="display:none">
                    <h4> Please correct the following errors and sumbit again </h4>
                    <ul id="errors" class="error-box"></ul>
                </div>
                @Html.ValidationSummary(true)
                @if (ViewBag.Message != null)
                {
                    <p style="color: red">@ViewBag.Message</p>
                }
                <fieldset class="col-sm-12">
                    <input asp-for="Id" hidden />
                    <div class="row col-sm-12">
                        <div class="col-sm-12">
                            <div class="form-group col-sm-12 row">
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row">
                                        <label asp-for="EmployeeId" class="form-control-label col-sm-4"></label>
                                        @*<div class="col-sm-6">
                    <select asp-for="EmployeeId"  class="form-control col-sm-10 select2" asp-items="@ViewBag.EmployeeId">
                        <option value="">---------</option>
                    </select>
                </div>*@
                                        <input asp-for="EmployeeId" class="form-control col-sm-6" readonly style="pointer-events:none;" />
                                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row ">
                                        <label asp-for="Employeename" class="form-group col-sm-4"></label>
                                        <input asp-for="Employeename" class="form-control col-sm-8" readonly style="pointer-events:none;" />
                                        <span asp-validation-for="Employeename" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row ">
                                        <label asp-for="Costcentercode" class="form-group col-sm-4"></label>
                                        <div class="col-sm-6">
                                            <select asp-for="Costcentercode" class="form-control col-sm-10 select2" asp-items="@ViewBag.Costcentercode">
                                                <option value="">---------</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="Costcentercode" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row">
                                        <label asp-for="Costcentername" class="form-control-label col-sm-4"></label>
                                        <input asp-for="Costcentername" class="form-control col-sm-8" readonly />
                                        <span asp-validation-for="Costcentername" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row">
                                        <label asp-for="Postid" class="form-control-label col-sm-4"></label>
                                        @*<input asp-for="Postid" class="form-control col-sm-3" />*@
                                        <div class="col-sm-3">
                                            <select asp-for="Postid" class="form-control col-sm-10 select2" asp-items="@ViewBag.Postid">
                                                <option value="">---------</option>
                                            </select>
                                        </div>
                                        <input asp-for="Postname" class="form-control col-sm-5" readonly style="pointer-events:none;" />
                                        <span asp-validation-for="Postid" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row">
                                        <label asp-for="Deptcode" class="form-control-label col-sm-4"></label>
                                        <div class="col-sm-3">
                                            <select asp-for="Deptcode" class="form-control col-sm-10 select2" asp-items="@ViewBag.Deptcode">
                                                <option value="">---------</option>
                                            </select>
                                        </div>
                                        <input asp-for="Deptname" class="form-control col-sm-5" readonly style="pointer-events:none;" />
                                        <span asp-validation-for="Deptcode" class="text-danger"></span>
                                        <span asp-validation-for="Deptname" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row ">
                                        <label asp-for="Divisions" class="form-group col-sm-4"></label>
                                        <div class="col-sm-8">
                                            @Html.DropDownListFor(model => model.Divisions,
                                           new SelectList(StaticLists.GET_DIVISIONS(), "Value", "Text", "Yes"), "-------", new { @class = "form-control select2" })
                                        </div>
                                        <span asp-validation-for="Divisions" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row">
                                        <label asp-for="Fromdate" class="form-control-label col-sm-4"></label>
                                        <input asp-for="Fromdate" class="form-control col-sm-4" type="date" />
                                        <input asp-for="Toodate" class="form-control col-sm-4" type="date" />
                                        <span asp-validation-for="Fromdate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row">
                                        <label asp-for="Status3" class="form-control-label col-sm-4"></label>
                                        <div class="col-sm-6">
                                            @Html.DropDownListFor(model => model.Status3,
                                       new SelectList(StaticLists.GET_MGMT(), "Value", "Text", "Yes"), "-------", new { @class = "form-control select2" })
                                        </div>
                                        <span asp-validation-for="Status3" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <br />
                <div class="row cols-m-12">
                    <div class="col-sm-6">
                        <div class="form-group col-sm-12">
                            <div class="form-group col-sm-12 row">
                                <label asp-for="ERNAM" class="form-control-label col-sm-4"></label>
                                <input asp-for="ERNAM" class="form-control col-sm-8" type="text" readonly />
                                <span asp-validation-for="ERNAM" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group col-sm-12">
                            <div class="form-group col-sm-12 row">
                                <label asp-for="ERDAT" class="form-control-label col-sm-4"></label>
                                <input asp-for="ERDAT" class="form-control col-sm-8" type="text" readonly />
                                <span asp-validation-for="ERNAM" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group col-sm-12">
                            <div class="form-group col-sm-12 row">
                                <label asp-for="AENAM" class="form-control-label col-sm-4"></label>
                                <input asp-for="AENAM" class="form-control col-sm-8" type="text" value="@User.Identity.Name" readonly />
                                <span asp-validation-for="AENAM" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group col-sm-12">
                            <div class="form-group col-sm-12 row">
                                <label asp-for="AEDAT" class="form-control-label col-sm-4"></label>
                                <input asp-for="AEDAT" class="form-control col-sm-8" type="text" value="@DateTime.UtcNow" readonly />
                                <span asp-validation-for="AEDAT" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <br /> 
                <div class="form-group col-12 text-center">
                    <button type="button" id="submit" class="btn btn-success col-sm-4"> Save </button>
                </div>
            </form>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>
<script src="~/AdminLTE/plugins/timepicker/bootstrap-timepicker.min.js"></script>
<script src="~/AdminLTE/plugins/iCheck/icheck.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/AdminLTE/plugins/datepicker/bootstrap-datepicker.js"></script>
<script>

    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        })
    });
    ////Cost Center Name
    $("#Costcentername").val(($("#Costcentercode").val() != "") ? $("#Costcentercode option:selected").text() : "");
    $("#Costcentercode").change(function () {
        debugger;
        if ($("#Costcentercode").val() != null) {
            var url = "/General/Costcenters/Getcostcenter?Costcentercode=" + $("#Costcentercode").val();
            $.get(url, function (data) {
                $("#Costcentername").val(data.costcentername);
            });
        }
        if ($("#Costcentercode").val() == "") {
            debugger;
            $("#Costcentername").val("");
        }
    });
    if ($("#Costcentercode").val() != null) {
        var url = "/General/Costcenters/Getcostcenter?Costcentercode=" + $("#Costcentercode").val();
        $.get(url, function (data) {
            $("#Costcentername").val(data.costcentername);
        });
    }
    //////Employee Name
    ////$("#Employeename").val(($("#EmployeeId").val() != "") ? $("#EmployeeId option:selected").text() : "");
    ////$("#EmployeeId").change(function () {
    ////    debugger;
    ////    if ($("#Costcentercode").val() != null) {
    ////        var url = "/General/Costcenters/Getemployee?EmployeeId=" + $("#EmployeeId").val();
    ////        $.get(url, function (data) {
    ////            $("#Employeename").val(data.employeename);
    ////        });
    ////    }
    ////});
    $("#Postname").val(($("#Postid").val() != "") ? $("#Postid option:selected").text() : "");
    $("#Postid").change(function () {
        debugger;
        if ($("#Postid").val() != null) {
            var url = "/CoachingMaster/Items/Getposition?Plcode=" + $("#Postid").val();
            $.get(url, function (data) {
                debugger;
                if (data != null) {
                    debugger;
                    $("#Postname").val(data.postname);
                    //$("#Pltypes").val(data.pllevel);
                }
            });
        }
        if ($("#Postid").val() == "") {
            debugger;
            $("#Postname").val("");
        }
    });
    if ($("#Postid").val() != null) {
        var url = "/CoachingMaster/Items/Getposition?Plcode=" + $("#Postid").val();
        $.get(url, function (data) {
            debugger;
            if (data != null) {
                debugger;
                $("#Postname").val(data.postname);
                //$("#Pltypes").val(data.pllevel);
            }
        });
    }
    $("#Deptname").val(($("#Deptcode").val() != "") ? $("#Deptcode option:selected").text() : "");
    $("#Deptcode").change(function () {
        debugger;
        if ($("#Deptcode").val() != null) {
            var url = "/General/Departments/Getdepartments?Deptcode=" + $("#Deptcode").val();
            $.get(url, function (data) {
                debugger;
                if (data != null) {
                    debugger;
                    $("#Deptname").val(data.deptname);
                }
            });
        }
        if ($("#Deptcode").val() == "") {
            debugger;
            $("#Deptname").val("");
        }
    });
    if ($("#Deptcode").val() != null) {
        var url = "/General/Departments/Getdepartments?Deptcode=" + $("#Deptcode").val();
        $.get(url, function (data) {
            debugger;
            if (data != null) {
                debugger;
                $("#Deptname").val(data.deptname);
            }
        });
    }
    $(document).ready(function () {
        let dateObj = new Date();
        $('.date-field').datepicker(
            {
                format: 'mm/dd/yyyy',
                startDate: dateObj,
                autoclose: true
            }).datepicker("setDate", dateObj);
        $('.select2').select2();
        $(document).keypress(function (e) {
            if (e.which == 13) {
                $('#submit').click();//Trigger search button click event
            }
        });

        $('#submit').click(function () {
            debugger;
            var form = $('#managers')
                .removeData("validator") /* added by the raw jquery.validate plugin */
                .removeData("unobtrusiveValidation");  /* added by the jquery unobtrusive plugin*/
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                debugger;
                var url = "/MasterTables/Managers/Edit";
                $('#general-error').hide();
                $('#errors').empty();
                $.post(url, $('#managers').serialize(), function (data) {
                    if (data.status == "3" || data.status == "4" || data.status == "5") {
                        if (data.status == "3") {
                            swal({
                                type: 'success',
                                title: data.message,
                                showConfirmButton: false,
                                timer: 3000
                            }).then(() => { window.location = "/MasterTables/Managers/Index"; });;
                            $('#modal').modal('hide');
                        }
                        else {
                            swal({
                                type: 'error',
                                title: data.message,
                                showConfirmButton: false,
                                timer: 3000
                            });
                        }
                    }
                    else {
                        $.each(data.errorList, function (index, value) {
                            $('#errors').append('<li> ' + value + ' </li>');
                        });
                        $('#general-error').show();
                    }
                });

            }
        });
    });

</script>