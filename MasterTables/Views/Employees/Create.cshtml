@model MROCoatching.DataObjects.Models.MasterTables.Employees
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using MROCoatching.DataObjects.DropDown;
@{
    ViewData["Title"] = "Create";
    Layout = null;
}
<style>
    .select2-container {
        width: 100% !important;
    }

    .select2-search--dropdown .select2-search__field {
        width: 98%;
    }

    .select2-container--default .select2-selection--single {
        height: inherit;
    }

    fieldset {
        border: 1px solid #005580;
        padding: 1px;
    }

    legend {
        font-family: 'Wide Latin';
        font-size: small;
    }
</style>
<link rel="stylesheet" href="~/AdminLTE/plugins/timepicker/bootstrap-timepicker.css">
<link rel="stylesheet" href="~/AdminLTE/plugins/iCheck/square/blue.css">
<link href="~/AdminLTE/plugins/datepicker/datepicker3.css" rel="stylesheet" />

<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-body">

            <form id="employees" class="form-horizontal">

                @Html.AntiForgeryToken()
                <div class="callout callout-danger error-box-holder" id="general-error" style="display:none">
                    <h4> Please correct the following errors and sumbit again </h4>
                    <ul id="errors" class="error-box"></ul>
                </div>
                @Html.ValidationSummary(true)
                @if (ViewBag.Message != null)
                {
                    <p style="color: red">@ViewBag.Message</p>
                }
                <fieldset class="col-sm-12">
                    <br />
                    <div class="row col-sm-12">
                        <div class="col-sm-12">
                            <div class="form-group col-sm-12 row">
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row">
                                        <label asp-for="EmployeeId" class="form-control-label col-sm-4"></label>
                                        <input asp-for="EmployeeId" class="form-control col-sm-2" placeholder="00012345" />
                                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row ">
                                        <label asp-for="Employeename" class="form-group col-sm-4"></label>
                                        <input asp-for="Employeename" class="form-control col-sm-8" placeholder="AAAAA BBBBB CCCCC" />
                                        <span asp-validation-for="Employeename" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row ">
                                        <label asp-for="Costcentercode" class="form-group col-sm-4"></label>
                                        <div class="col-sm-4">
                                            <select asp-for="Costcentercode" class="form-control col-sm-10 select2" asp-items="@ViewBag.Costcentercode">
                                                <option value="">---------</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="Costcentercode" class="text-danger"></span>

                                        <input asp-for="Costcentername" class="form-control col-sm-4" placeholder="" readonly style="pointer-events:none;" />

                                        <span asp-validation-for="Costcentername" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row ">
                                        <label asp-for="Reportsto" class="form-group col-sm-4"></label>
                                        <div class="col-sm-5">
                                            <select asp-for="Reportsto" class="form-control col-sm-10 select2" asp-items="@ViewBag.Costcentercode">
                                                <option value="">---------</option>
                                            </select>
                                        </div>
                                        @*<input asp-for="Reportsto" class="form-control col-sm-8" placeholder="" readonly style="pointer-events:none;" />*@
                                        <span asp-validation-for="Reportsto" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row">
                                        <label asp-for="Seniordate" class="form-control-label col-sm-4"></label>
                                        <input asp-for="Seniordate" class="form-control col-sm-6 date-field" type="datetime" />
                                        <span asp-validation-for="Seniordate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row">
                                        <label asp-for="PositionId" class="form-control-label col-sm-4"></label>
                                        <div class="col-sm-4">
                                            <select asp-for="PositionId" class="form-control col-sm-10 select2" asp-items="@ViewBag.PositionId">
                                                <option value="">---------</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="PositionId" class="text-danger"></span>
                                        <input asp-for="Positiondesc" class="form-control col-sm-4" placeholder="XXXXXXXXXXXXXXX" readonly style="pointer-events:none;" />

                                        <span asp-validation-for="Positiondesc" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row">
                                        <label asp-for="Fromdate" class="form-control-label col-sm-4">From / Too Date</label>
                                        <input asp-for="Fromdate" class="form-control col-sm-3 date-field" type="datetime" required />
                                        <input asp-for="Toodate" class="form-control col-sm-3 date-field" type="datetime" required />
                                        <span asp-validation-for="Fromdate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row">
                                        <label asp-for="Promotiondate" class="form-control-label  col-sm-4">Promotion / Next Prom. Date</label>
                                        <input asp-for="Promotiondate" class="form-control col-sm-3 date-field" type="datetime" />
                                        <input asp-for="NextPromdate" class="form-control col-sm-3 date-field" type="datetime" />
                                        <input asp-for="Status"  value="Y" hidden/>
                                        <span asp-validation-for="Promotiondate" class="text-danger"></span>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </fieldset>
                <br />
                <fieldset>
                    <br />
                    <div class="form-group cols-m-12 row">
                        <div class="form-group col-sm-4">
                            <div class="form-group col-sm-12 row">
                                <label asp-for="Status1" class="form-control-label col-sm-4"></label>
                                <div class="col-sm-6">
                                    @Html.DropDownListFor(model => model.Status1,
                                   new SelectList(StaticLists.GET_MGMT(), "Value", "Text", "Yes"), "-------", new { @class = "form-control select2" })
                                </div>
                                <span asp-validation-for="Status1" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group col-sm-4">
                            <div class="form-group col-sm-12 row">
                                <label asp-for="Status2" class="form-control-label col-sm-4"></label>
                                <div class="col-sm-6">
                                    @Html.DropDownListFor(model => model.Status2,
                               new SelectList(StaticLists.GET_MGMT(), "Value", "Text", "Yes"), "-------", new { @class = "form-control select2" })
                                </div>
                                <span asp-validation-for="Status2" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group col-sm-4">
                            <div class="form-group col-sm-12 row">
                                <label asp-for="Empgroup" class="form-control-label col-sm-4"></label>
                                <div class="col-sm-6">
                                    @Html.DropDownListFor(model => model.Empgroup,
                               new SelectList(StaticLists.GET_EMPGRP(), "Value", "Text", "Yes"), "-------", new { @class = "form-control select2" })
                                </div>
                                <span asp-validation-for="Empgroup" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <br />
                <div class="row cols-m-12">
                    <div class="col-sm-6">
                        <div class="form-group col-sm-12">
                            <div class="form-group col-sm-12 row">
                                <label asp-for="ERNAM" class="form-control-label col-sm-4"></label>
                                <input asp-for="ERNAM" class="form-control col-sm-8" type="text" value="@User.Identity.Name" readonly />
                                <span asp-validation-for="ERNAM" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group col-sm-12">
                            <div class="form-group col-sm-12 row">
                                <label asp-for="ERDAT" class="form-control-label col-sm-4"></label>
                                <input asp-for="ERDAT" class="form-control col-sm-8" type="text" value="@DateTime.UtcNow" readonly />
                                <span asp-validation-for="ERNAM" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <br /> 
                <div class="form-group col-12 text-center">
                    <button type="button" id="submit" class="btn btn-success col-sm-4"> Create </button>
                </div>
            </form>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>
<script src="~/AdminLTE/plugins/timepicker/bootstrap-timepicker.min.js"></script>
<script src="~/AdminLTE/plugins/iCheck/icheck.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/AdminLTE/plugins/datepicker/bootstrap-datepicker.js"></script>
<script>

    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        })
    });
    $("#Costcentername").val(($("#Costcentercode").val() != "") ? $("#Costcentercode option:selected").text() : "");
    $("#Costcentercode").change(function () {
        debugger;
        if ($("#Costcentercode").val() != null) {
            var url = "/General/Costcenters/Getcostcenter?Costcentercode=" + $("#Costcentercode").val();
            $.get(url, function (data) {
                debugger;
                $("#Costcentername").val(data.costcentername);
                $("#Reportsto").val($("#Costcentercode").val());

            });
        }
    });
    //Positions
    $("#Positiondesc").val(($("#PositionId").val() != "") ? $("#PositionId option:selected").text() : "");
    $("#PositionId").change(function () {
        debugger;
        if ($("#PositionId").val() != null) {
            var url = "/General/Positions/GetPositions?PositionId=" + $("#PositionId").val();
            $.get(url, function (data) {
                debugger;
                $("#Positiondesc").val(data.postname);
            });
        }
    });

    $(document).ready(function () {
        let dateObj = new Date();
        let dateObjs = new Date();
        dateObjs = '12/31/9999';
        $('.date-field').datepicker(
            {
                format: 'mm/dd/yyyy',
               // startDate: dateObj,
                autoclose: true
            }).datepicker("setDate", dateObj);
        $('.date-fields').datepicker(
            {
                format: 'mm/dd/yyyy',
               // startDate: dateObjs,
                autoclose: true
            }).datepicker("setDate", dateObjs);

        $('.select2').select2();
        $(document).keypress(function (e) {
            if (e.which == 13) {
                $('#submit').click();//Trigger search button click event
            }
        });

        $('#submit').click(function () {
            debugger;
            var abc = $("#Costcentercode").val();
            $("#Costcentercode").val(abc);
            var form = $('#employees')
                .removeData("validator") /* added by the raw jquery.validate plugin */
                .removeData("unobtrusiveValidation");  /* added by the jquery unobtrusive plugin*/
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                debugger;
                var url = "/MasterTables/Employees/Create";
                $('#general-error').hide();
                $('#errors').empty();
                $.post(url, $('#employees').serialize(), function (data) {
                    if (data.status == "3" || data.status == "4" || data.status == "5") {
                        if (data.status == "3") {
                            swal({
                                type: 'success',
                                title: data.message,
                                showConfirmButton: false,
                                timer: 3000
                            }).then(() => { window.location = "/MasterTables/Employees/Index"; });;
                            $('#modal').modal('hide');
                        }
                        else {
                            swal({
                                type: 'error',
                                title: data.message,
                                showConfirmButton: false,
                                timer: 3000
                            });
                        }
                    }
                    else {
                        $.each(data.errorList, function (index, value) {
                            $('#errors').append('<li> ' + value + ' </li>');
                        });
                        $('#general-error').show();
                    }
                });

            }
        });
    });

</script>