    ////            $("#Costcentername").val(data.costcentername);
    ////        });
    ////    }
    ////});
    //////Employee Name
    ////$("#Employeename").val(($("#EmployeeId").val() != "") ? $("#EmployeeId option:selected").text() : "");
    ////$("#EmployeeId").change(function () {
    ////    debugger;
    ////    if ($("#EmployeeId").val() != null) {
    ////        var url = "/MasterTables/Employees/Getemployee?EmployeeId=" + $("#EmployeeId").val();
    ////        $.get(url, function (data) {
    ////            $("#Employeename").val(data.employeename);
    ////        });
    ////    }
    ////});
    //Departments
    $("#Deptname").val(($("#Deptcode").val() != "") ? $("#Deptcode option:selected").text() : "");
    $("#Deptcode").change(function () {
        debugger;
        if ($("#Deptcode").val() != null) {
            var url = "/General/Departments/Getdepartments?Deptcode=" + $("#Deptcode").val();
            $.get(url, function (data) {
                $("#Deptname").val(data.deptname);
            });
        }
    });
    //Employee Name

    $("#Employeename").val(($("#EmployeeId").val() != "") ? $("#EmployeeId option:selected").text() : "");
    $("#EmployeeId").change(function () {
        debugger;
        if ($("#EmployeeId").val() != null) {
            var url = "/MasterTables/Employees/Getemployee?EmployeeId=" + $("#EmployeeId").val();
            $.get(url, function (data) {
                debugger;
                $("#Employeename").val(data.employeename);
                $("#Costcentercode").val(data.costcentercode);
                if (data.costcentercode != null) {
                    debugger;
                    var url = "/General/Costcenters/Getcostcenter?Costcentercode=" + $("#Costcentercode").val();
                    $.get(url, function (data) {
                        debugger;
                        $("#Costcentername").val(data.costcentername);
                        $("#Deptcode").val(data.deptcode);
                        //Get Departments
                        if (data.deptcode != null) {
                            debugger;
                            var url1 = "/General/Departments/Getdepartments?Deptcode=" + $("#Deptcode").val();
                            $.get(url1, function (data) {
                                debugger;
                                $("#Deptname").val(data.deptname);
                            });
                        }
                    });
                }
                debugger;
                $("#Postid").val(data.positionId);
                $("#Postname").val(data.positiondesc);
                var frm = String(data.fromdate).substring(0, 10);
                fromdates(frm);
                var too = String(data.toodate).substring(0, 10);
                Toodates(too);
            });
        }
        if ($("#EmployeeId").val() == "") {
            debugger;
            $("#Employeename").val("");
            $("#Costcentercode").val("");
            $("#Costcentername").val("");
            $("#Deptcode").val("");
            $("#Deptname").val("");
        }
    });


    //From Date
    function fromdates(frm) {
        var xy = frm;
        var x1 = xy.substring(0, 4);
        var x2 = xy.substring(5, 7);
        var x3 = xy.substring(8, 10);
        var all = x2 + "/" + x3 + "/" + x1;
        $("#Fromdate").val(all);
        return $("#Fromdate").val();
    }
    //Too Date
    function Toodates(too) {
        var xy = too;
        var x1 = xy.substring(0, 4);
        var x2 = xy.substring(5, 7);
        var x3 = xy.substring(8, 10);
        var all = x2 + "/" + x3 + "/" + x1;
        $("#Toodate").val(all);
        return $("#Fromdate").val();
    }
   
    $(document).ready(function () {
        let dateObj = new Date();
        let dateObj1 = new Date();
        dateObj1 = '12/31/9999';
        $('.date-field').datepicker(
            {
                format: 'mm/dd/yyyy',
                //startDate: dateObj,
                autoclose: true
            }).datepicker("setDate", dateObj);
         $('.date-field1').datepicker(
            {
                format: 'mm/dd/yyyy',
                //startDate: dateObj,
                autoclose: true
            }).datepicker("setDate", dateObj1);

        $('.select2').select2();
        $(document).keypress(function (e) {
            if (e.which == 13) {
                $('#submit').click();//Trigger search button click event
            }
        });

        $('#submit').click(function () {
            debugger;
            var form = $('#coaches')
                .removeData("validator") /* added by the raw jquery.validate plugin */
                .removeData("unobtrusiveValidation");  /* added by the jquery unobtrusive plugin*/
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                debugger;
                var url = "/MasterTables/Coaches/Create";
                $('#general-error').hide();
                $('#errors').empty();
                $.post(url, $('#coaches').serialize(), function (data) {
                    if (data.status == "3" || data.status == "4" || data.status == "5") {
                        if (data.status == "3") {
                            swal({
                                type: 'success',
                                title: data.message,
                                showConfirmButton: false,
                                timer: 3000
                            }).then(() => { window.location = "/MasterTables/Coaches/Index"; });;
                            $('#modal').modal('hide');
                        }
                        else {
                            swal({
                                type: 'error',
                                title: data.message,
                                showConfirmButton: false,
                                timer: 3000
                            });
                        }
                    }
                    else {
                        $.each(data.errorList, function (index, value) {
                            $('#errors').append('<li> ' + value + ' </li>');
                        });
                        $('#general-error').show();
                    }
                });

            }
        });
    });

</script>