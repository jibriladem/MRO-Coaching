                                        <label asp-for="Deptname" class="form-control-label col-sm-4"></label>
                                        <input asp-for="Deptname" class="form-control col-sm-8" placeholder="XXXXXXXXXXXXXXX" readonly style="pointer-events:none;"/>
                                        <span asp-validation-for="Deptname" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row">
                                        <label asp-for="Fromdate" class="form-control-label col-sm-4">From / Too Date</label>
                                        <input asp-for="Fromdate" class="form-control col-sm-3 date-field" type="text" readonly  style="pointer-events:none;"/>
                                        <input asp-for="Toodate" class="form-control col-sm-3 date-field" type="text" readonly  style="pointer-events:none;"/>
                                        <span asp-validation-for="Fromdate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group col-sm-12 row">
                                        <label asp-for="Training" class="form-control-label col-sm-4">Training Types</label>
                                        <div class="col-sm-8">
                                            @Html.DropDownListFor(model => model.Training,
                                           new SelectList(StaticLists.GET_Train(), "Value", "Text", ""), "--------------", new { @class = "form-control select2" })
                                        </div>
