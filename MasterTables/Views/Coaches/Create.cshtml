                                    <div class="form-group col-sm-12 row">
                                        <label asp-for="Deptcode" class="form-control-label col-sm-4"></label>
                                        <input asp-for="Deptcode" class="form-control col-sm-6" placeholder="AAAAA" readonly style="pointer-events:none;" />
